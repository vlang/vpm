root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.v]
indent_style = tab
indent_size = 4

[*.{yml,yaml,html}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{txt,out}]
insert_final_newline = false

[Makefile]
indent_style = tab
